<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<fx:root alignment="TOP_RIGHT"
         maxHeight="1.7976931348623157E308"
         maxWidth="1.7976931348623157E308"
         prefWidth="400.0"
         spacing="8.0"
         type="javafx.scene.layout.HBox"
         xmlns="http://javafx.com/javafx/17"
         xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label fx:id="dialog"
               text="Label"
               wrapText="true"
               minHeight="-Infinity"
               style="-fx-background-radius: 15; -fx-padding: 12 16 12 16; -fx-font-size: 14px; -fx-line-spacing: 2px;"
               HBox.hgrow="ALWAYS"/>
        <ImageView fx:id="displayPicture"
                   fitHeight="50.0"
                   fitWidth="50.0"
                   pickOnBounds="true"
                   preserveRatio="true"
                   style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 3, 0, 0, 2);" />
    </children>
    <padding>
        <Insets bottom="6.0" left="8.0" right="8.0" top="6.0" />
    </padding>
</fx:root>