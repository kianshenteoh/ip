<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="400.0" minWidth="350.0"
            prefHeight="600.0" prefWidth="400.0"
            style="-fx-background-color: #f5f5f5;"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="mikey.main.MainWindow">
    <children>
        <!-- Input area with improved styling -->
        <HBox layoutY="558.0" spacing="8.0"
              AnchorPane.bottomAnchor="8.0"
              AnchorPane.leftAnchor="8.0"
              AnchorPane.rightAnchor="8.0">
            <children>
                <TextField fx:id="userInput"
                           onAction="#handleUserInput"
                           prefHeight="35.0"
                           promptText="Type your message here..."
                           style="-fx-background-radius: 18; -fx-border-radius: 18; -fx-padding: 8 12 8 12; -fx-border-color: #ddd; -fx-border-width: 1;"
                           HBox.hgrow="ALWAYS" />
                <Button fx:id="sendButton"
                        mnemonicParsing="false"
                        onAction="#handleUserInput"
                        prefHeight="35.0"
                        prefWidth="60.0"
                        style="-fx-background-radius: 18; -fx-background-color: #007AFF; -fx-text-fill: white; -fx-font-weight: bold;"
                        text="Send" />
            </children>
        </HBox>

        <!-- Chat area with improved spacing -->
        <ScrollPane fx:id="scrollPane"
                    hbarPolicy="NEVER"
                    vbarPolicy="AS_NEEDED"
                    fitToWidth="true"
                    hvalue="1.0"
                    style="-fx-background-color: transparent; -fx-background: transparent;"
                    vvalue="1.0"
                    AnchorPane.topAnchor="8.0"
                    AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0"
                    AnchorPane.bottomAnchor="55.0">
            <content>
                <VBox fx:id="dialogContainer"
                      spacing="4.0"
                      style="-fx-background-color: transparent;">
                    <padding>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>